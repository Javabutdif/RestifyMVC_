@model IEnumerable<Restify.Models.Apartment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.apartment_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.apartment_details)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.apartment_location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.apartment_image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.apartment_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.apartment_details)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.apartment_location)
            </td>
                <td>
                    <img class="w-50 h-50" src="data:image/jpeg;base64,@Convert.ToBase64String(item.apartment_image)" alt="Apartment Image" />
                </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.apartment_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.apartment_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.apartment_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
